<section id="hero" class=" pt-36 pb-20 md:pt-48 md:pb-32 flex flex-col items-center text-center overflow-hidden animate-fade-in">
  <!-- Enhanced background decorative elements -->
  <div class="absolute inset-0 overflow-hidden">
    
    <!-- Parallax particles with proper classes -->
    <div class="absolute top-20 left-20">
      <div class="parallax-particle w-2 h-2 bg-primary/40 rounded-full"></div>
      <div class="parallax-particle w-1 h-1 bg-accent/60 rounded-full" style="left: 20px; top: 30px;"></div>
      <div class="parallax-particle w-1.5 h-1.5 bg-secondary/50 rounded-full" style="left: 40px; top: 10px;"></div>
    </div>
    <div class="absolute bottom-20 right-20">
      <div class="parallax-particle w-2 h-2 bg-accent/40 rounded-full"></div>
      <div class="parallax-particle w-1 h-1 bg-primary/60 rounded-full" style="right: 20px; bottom: 30px;"></div>
    </div>
    
    <!-- Subtle gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-background/5 to-background/10"></div>
  </div>
  
  <!-- Hero Content Wrapper -->
  <div class="hero-content relative z-10 reveal-stagger">
    
    <!-- Name with animated gradient -->
    <h1 class="text-heading-1 mb-6 bg-gradient-to-r from-foreground via-primary to-foreground bg-clip-text text-transparent drop-shadow-lg bg-[length:200%_auto] gpu-accelerated">
      Manpreet Gill
    </h1>
    
    <!-- Tagline -->
    <p class="text-heading-5 text-primary font-semibold mb-8 max-w-4xl mx-auto px-4 gpu-accelerated">
      Developer driven by deep curiosity for how software works and passion for building elegant, user-focused solutions
    </p>
    
    <!-- Description -->
    <p class="max-w-3xl text-body-large text-muted-foreground mb-12 mx-auto px-4 gpu-accelerated">
      I believe in <span class="font-semibold text-primary bg-primary/15 px-3 py-1 rounded-lg border border-primary/20 hover:bg-primary/20 transition-colors duration-300">learning by doing</span> â€” tackling complex, real-world projects from day one. Every challenge is an opportunity to grow, experiment, and create meaningful impact through code.
    </p>
    
    <!-- Call-to-action buttons -->
    <div class="flex flex-col sm:flex-row gap-4 items-center justify-center">
      <div class="flex flex-col sm:flex-row gap-4 items-center">
        <a 
          href="#projects" 
          class="group morph-button premium-hover relative inline-flex items-center px-8 py-4 glassmorphism-button text-black font-bold shadow-lg hover:shadow-xl transition-all duration-300 text-lg tracking-wide overflow-hidden hover:scale-105"
        >
          <span class="absolute inset-0 bg-gradient-to-r from-primary/80 to-accent/80 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left rounded-xl"></span>
          <span class="relative flex items-center">
            View Projects
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
        
        <a 
          href="#contact" 
          class="group morph-button premium-hover inline-flex items-center px-8 py-4 glassmorphism glassmorphism-hover border border-primary/30 text-primary hover:text-primary-foreground font-semibold transition-all duration-300 text-lg tracking-wide hover:scale-105 hover:shadow-lg"
        >
          <span class="mr-2">Let's Connect</span>
          <svg class="w-5 h-5 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Enhanced scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 scroll-indicator cursor-pointer group" onclick="document.querySelector('#about').scrollIntoView({behavior: 'smooth'})">
    <div class="relative p-3 rounded-full glassmorphism border border-primary/30 group-hover:border-primary/50 transition-all duration-300 hover:scale-110">
      <svg class="w-5 h-5 text-primary group-hover:text-accent transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
