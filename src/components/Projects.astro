---

<!-- Scroll-based Project Showcase -->
<section id="projects" class="relative">
  <!-- Introduction Section -->
  <div class="py-24 bg-gradient-to-b from-muted to-background">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 text-primary">Featured Work</h2>
      <div class="w-32 h-1 bg-gradient-to-r from-primary to-accent mx-auto rounded-full mb-8"></div>
      <p class="text-xl md:text-2xl text-muted-foreground mb-8">
        Three projects that showcase my passion for solving complex problems through elegant code.
      </p>
      <div class="text-sm text-muted-foreground uppercase tracking-wider">
        Scroll to explore each project
      </div>
    </div>
  </div>

  <!-- Individual Project Sections -->
  {projects.map((project, index) => (
    <div 
      id={`project-${project.id}`}
      class="min-h-screen flex items-center relative overflow-hidden"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class={`absolute inset-0 bg-gradient-to-br ${project.gradient}`}></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 py-20 grid lg:grid-cols-2 gap-12 items-center relative z-10">
        <!-- Project Info -->
        <div class="space-y-8">
          <!-- Project Header -->
          <div class="space-y-4">
            <div class="flex items-center space-x-4">
              <div class={`w-16 h-16 rounded-2xl bg-gradient-to-r ${project.gradient} flex items-center justify-center text-3xl`}>
                {project.icon}
              </div>
              {project.featured && (
                <span class="px-3 py-1 bg-gradient-to-r from-accent to-primary text-accent-foreground text-sm font-bold rounded-full">
                  ‚ú® Featured
                </span>
              )}
            </div>
            
            <div>
              <h3 class="text-3xl md:text-4xl font-bold text-primary mb-2">
                {project.title}
              </h3>
              <p class="text-xl md:text-2xl text-accent font-semibold">
                {project.subtitle}
              </p>
            </div>
          </div>
          
          <!-- Impact Stats -->
          <div class="p-4 glassmorphism rounded-2xl glassmorphism-hover">
            <p class="text-sm text-muted-foreground font-semibold uppercase tracking-wider mb-2">Impact & Reach</p>
            <p class="text-lg text-foreground font-medium">{project.impact}</p>
          </div>
          
          <!-- Description -->
          <div class="space-y-4">
            <p class="text-lg text-muted-foreground">
              {project.longDescription}
            </p>
          </div>
          
          <!-- Tech Stack -->
          <div class="space-y-4">
            <h4 class="text-lg font-semibold text-foreground">Technologies Used</h4>
            <div class="flex flex-wrap gap-3">
              {project.tech.map((tech) => (
                <span class={`px-4 py-2 bg-gradient-to-r ${project.gradient} text-primary-foreground rounded-full text-sm font-semibold transition-all hover:scale-105`}>
                  {tech}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4 pt-4">
            <a 
              href={project.links.github}
              target="_blank"
              rel="noopener"
              class="group inline-flex items-center px-6 py-3 glassmorphism text-foreground rounded-2xl glassmorphism-hover transition-all font-semibold"
            >
              <svg class="w-5 h-5 mr-3 group-hover:rotate-12 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
