---
import { GreetWords } from "./ui/hello";

const words = ["Hoi", "Hello", "Hola", "नमस्ते", "Bonjour", "Nǐnhǎo", "Konnichiwa"];
---

<section
  id="hero"
  class="pt-6 pb-20 md:pt-48 md:pb-32 flex flex-col items-start text-left overflow-hidden animate-fade-in relative"
>
  <!-- Hero Content Wrapper -->
  <div class="relative z-10 content-container">
    <GreetWords words={words} className="text-4xl md:text-5xl font-bold mb-4" client:load />

    <h1
      class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-foreground via-primary to-foreground bg-clip-text text-transparent"
    >
      I am Manpreet,
    </h1>

    <p
      class="text-xl md:text-2xl text-primary font-semibold mb-8 max-w-4xl"
    >
      A front-end developer driven by deep curiosity for how software works and passion for building elegant, user-focused solutions.
    </p>

    <p
      class="max-w-3xl text-lg text-muted-foreground mb-12"
    >
      I believe in <span
        class="font-semibold text-primary bg-primary/15 px-3 py-1 rounded-lg border border-primary/20 hover:bg-primary/20 transition-colors"
        >learning by doing</span
      >, tackling complex, real-world projects from day one. Every challenge is
      an opportunity to grow, experiment, and create meaningful impact through code.
    </p>

    <!-- Call-to-action buttons -->
    <div class="flex flex-col sm:flex-row gap-4 items-center justify-center">
      <div class="flex flex-col sm:flex-row gap-4 items-center">
        <a
          href="#projects"
          class="group relative inline-flex items-center px-8 py-4 glassmorphism-button font-bold text-lg transition-all hover:scale-105 rounded-full"
        >
          <span
            class="absolute inset-0 bg-gradient-to-r from-primary/80 to-accent/80 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left rounded-full"
          ></span>
          <span class="relative flex items-center">
            View Projects
            <svg
              class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
        <a
          href="#contact"
          class="group relative inline-flex items-center px-8 py-4 glassmorphism-hover border border-primary/30 text-primary font-semibold text-lg transition-all hover:scale-105 rounded-full overflow-hidden"
        >
          <span
            class="absolute inset-0 bg-gradient-to-r from-primary/20 to-accent/20 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-500 origin-left rounded-full"
          ></span>
          <span class="relative flex items-center">
            <svg
              class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            Get In Touch
          </span>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 cursor-pointer group"
    onclick="document.querySelector('#about').scrollIntoView({behavior: 'smooth'})"
  >
    <div
      class="relative p-3 rounded-full glassmorphism border border-primary/30 group-hover:border-primary/50 transition-all hover:scale-110"
    >
      <svg
        class="w-5 h-5 text-primary group-hover:text-accent transition-colors"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
