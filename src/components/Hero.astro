---
import { GreetWords } from "./ui/hello";
import { TypewriterText } from "./ui/TypewriterText.jsx";
import { TechIcon } from "./ui/TechIcon";
import { FloatingElements } from "./ui/FloatingElements.jsx";

const words = ["Hoi", "Hello", "Hola", "‡§®‡§Æ‡§∏‡•ç‡§§‡•á", "Bonjour", "N«ênh«éo", "Konnichiwa"];
const roles = ["Frontend Developer", "Systems Engineer", "Problem Solver", "AI Enthusiast"];
---

<section
  id="hero"
  class="min-h-screen relative flex items-center overflow-hidden"
>
  <!-- Floating Interactive Background -->
  <FloatingElements client:load />
  
  <!-- Main Content Grid -->
  <div class="content-container relative z-10 grid lg:grid-cols-2 gap-12 items-center ">
    <!-- Left Column - Main Content -->
    <div class="space-y-8 animate-fade-in">
      <!-- Greeting -->
      <div class="space-y-2">
        <GreetWords words={words} className="text-2xl md:text-3xl font-bold" client:load />
        <div class="text-sm text-muted-foreground uppercase tracking-wider">Welcome to my digital space</div>
      </div>
      
      <!-- Main Heading -->
      <div class="space-y-4">
        <h1 class="text-5xl md:text-7xl font-bold bg-gradient-to-r from-foreground via-primary to-accent bg-clip-text text-transparent leading-tight">
          I'm Manpreet
        </h1>
        <div class="text-2xl md:text-3xl font-semibold text-primary min-h-[1.2em]">
          <TypewriterText words={roles} className="text-primary" client:load />
        </div>
      </div>
      
      <!-- Professional Description -->
      <p class="text-lg md:text-xl text-muted-foreground max-w-2xl leading-relaxed">
        Crafting elegant solutions through code, driven by curiosity and passion for innovation. I transform complex problems into 
        <span class="font-semibold text-primary bg-primary/10 px-2 py-1 rounded-lg border border-primary/20 hover:bg-primary/20 transition-colors cursor-default">
          user-centric experiences
        </span>
        that make a difference.
      </p>
      
      <!-- Enhanced Call-to-Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 pt-4">
        <a
          href="#projects"
          class="group relative inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary to-accent font-bold text-lg rounded-full transition-all hover:scale-105 shadow-lg hover:shadow-xl overflow-hidden"
        >
          <span class="relative flex items-center z-10">
            <svg class="w-5 h-5 mr-2 group-hover:rotate-12 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            Explore My Work
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </span>
          <div class="absolute inset-0 bg-gradient-to-r from-accent to-secondary opacity-0 group-hover:opacity-100 transition-opacity rounded-full"></div>
        </a>
        
        <a
          href="#contact"
          class="group relative inline-flex items-center px-8 py-4 glassmorphism text-foreground font-semibold text-lg rounded-full transition-all hover:scale-105 border border-primary/30 glassmorphism-hover"
        >
          <span class="relative flex items-center z-10">
            <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Let's Connect
          </span>
        </a>
      </div>
    </div>
    
    <!-- Right Column - Visual Elements -->
    <div class="relative flex items-center justify-center lg:justify-end">
      <!-- Main Profile Visual -->
      <div class="relative group">
        <!-- Animated Profile Container -->
        <div class="relative w-80 h-80 md:w-96 md:h-96">
          <!-- Outer Ring -->
          <div class="absolute inset-0 rounded-full bg-gradient-to-r from-primary/20 to-accent/20 animate-spin-slow"></div>
          
          <!-- Middle Ring -->
          <div class="absolute inset-4 rounded-full bg-gradient-to-l from-secondary/20 to-primary/20 animate-spin-slow" style="animation-direction: reverse; animation-duration: 12s;"></div>
          
          <!-- Inner Content -->
          <div class="absolute inset-8 rounded-full glassmorphism flex items-center justify-center group-hover:scale-105 transition-transform duration-500">
            <div class="text-center space-y-4">
              <!-- Profile Placeholder/Avatar -->
              <div class="w-32 h-32 mx-auto rounded-full bg-gradient-to-r from-primary to-accent flex items-center justify-center text-4xl font-bold text-primary-foreground shadow-2xl">
                M
              </div>
              
              <!-- Status Indicator -->
              <div class="flex items-center justify-center space-x-2">
                <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                <span class="text-sm font-medium text-muted-foreground">Sleeping Reactively</span>
              </div>
              
              <!-- Tech Stack Orbit -->
              <div class="relative w-24 h-24 mx-auto">
                <div class="absolute inset-0 animate-spin-slow">
                  <div class="absolute -top-2 left-1/2 transform -translate-x-1/2 w-8 h-8 glassmorphism rounded-full flex items-center justify-center">
                    <span class="text-xs"><TechIcon tech="react"  /></span>
                  </div>
                  <div class="absolute top-1/2 -right-2 transform -translate-y-1/2 w-8 h-8 glassmorphism rounded-full flex items-center justify-center">
                    <span class="text-xs"><TechIcon tech="astro" /></span>
                  </div>
                  <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-8 h-8 glassmorphism rounded-full flex items-center justify-center">
                    <span class="text-xs"><TechIcon tech="linux" /></span>
                  </div>
                  <div class="absolute top-1/2 -left-2 transform -translate-y-1/2 w-8 h-8 glassmorphism rounded-full flex items-center justify-center">
                    <span class="text-xs">üé®</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Floating Achievement Badges -->
        <div class="absolute -top-4 -left-4 glassmorphism rounded-2xl p-3 animate-float">
          <div class="text-center">
            <div class="text-sm font-bold">Linux</div>
            <div class="text-xs text-muted-foreground">Enthusiast</div>
          </div>
        </div>
        
        <div class="absolute -bottom-4 -right-4 glassmorphism rounded-2xl p-3 animate-float" style="animation-delay: -1s;">
          <div class="text-center">
            <div class="text-sm font-bold">Solving</div>
            <div class="text-xs text-muted-foreground">Problems</div>
          </div>
        </div>
        
        <div class="absolute top-1/2 -right-8 transform -translate-y-1/2 glassmorphism rounded-2xl p-3 animate-float" style="animation-delay: -2s;">
          <div class="text-center">
            <div class="text-sm font-bold">Exploring</div>
            <div class="text-xs text-muted-foreground">Front-end</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Enhanced Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 cursor-pointer group animate-bounce" onclick="document.querySelector('#about').scrollIntoView({behavior: 'smooth'})">
    <div class="relative p-4 rounded-full glassmorphism border border-primary/30 group-hover:border-primary/60 transition-all hover:scale-110">
      <svg class="w-6 h-6 text-primary group-hover:text-accent transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
    <div class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 text-xs text-muted-foreground whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity">
      Scroll to explore
    </div>
  </div>
</section>
